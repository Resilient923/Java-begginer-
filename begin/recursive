	//피보나치 재귀함수 구현
	
  public static int fibonacci(int number) {
		if(number==1) {
			return 1;
		}else if(number==2) {
			return 1;
		}else {
			return fibonacci(number-1)+fibonacci(number-2);
		}
	}
	
	public static void main(String[] args) {
		System.out.println("피보나치 10번째"+fibonacci(10));
	}
}
